<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

	<meta name="description" content="Nette Framework web application skeleton">
	<meta name="robots" content="{$robots}" n:ifset="$robots">

        <title>{block title|striptags|upper}{/block}</title>

	<link rel="stylesheet" href="{$basePath}/public/admin/css/bootstrap.css" type="text/css">
	<link rel="stylesheet" href="{$basePath}/public/admin/css/main.css" type="text/css">
	<link rel="shortcut icon" href="{$basePath}/favicon.ico" type="image/x-icon">

	{block head}{/block}
</head>

<body n:class="$presenter->isLinkCurrent('Login:default') ? loginPage">
    {if $user->isLoggedIn()}    
    <div class="navbar navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{link ControlPanel:default}">
                    STELLA CMS
                </a>

                <div class="nav">
                    <ul class="nav nav-pills">
                        <li class="divider-vertical"></li>
                        <li class="dropdown" id="menu1">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">Content <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link ObsahStranek:default}">Obsah stranek</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link ObsahStranek:addArticle}" tabindex="-1">Přidat článek</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link Category:default}">Kategorie</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link Category:addCategory}" tabindex="-1">Přidat kategorii</a>
                                        </li>
                                    </ul>
                                </li>
                                <li><a href="">Slider</a></li>
                            </ul>
                        </li>
                        <li class="dropdown" id="menu2">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu2">Menus <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link Menu:default}">Menu Manager</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link Menu:addMenu}" tabindex="-1">Add menu</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="divider-vertical"></li>
                    </ul>
                </div><!-- container class ending -->

                <div class="btn-group pull-right">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#menu4">
                    <i class="icon-user"></i> {$user->getIdentity()->username}
                    <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href=""><i class="icon-edit"></i> Upravit profil</a></li>
                        <li><a n:href="Logout!"><i class="icon-off"></i>  Log Out</a></li>
                    </ul>
                </div>
            </div><!-- container ending -->
        </div><!-- end navbar-inner ending -->
    </div>
    {/if}  
        
    {snippet flashMessages}
        <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">
            <button class="close" data-dismiss="alert" type="button">×</button>
            {$flash->message}
        </div>
    {/snippet}    
    <div class="container">
    <!-- content block! -->
        {include #content}
    <!-- content block ending! -->
    </div>

<!-- JScript block
============================================== -->  
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="{$basePath}/public/admin/js/jquery-1.9.1.min.js"><\/script>')</script>
<script type="text/javascript" src="{$basePath}/public/admin/js/bootstrap.min.js"></script>
<script type="text/javascript" src="{$basePath}/public/admin/js/page.js"></script>
{block jscript}
{/block}
<!-- End Document
================================================== -->    
</body>
</html>
