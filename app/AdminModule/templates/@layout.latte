<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

	<meta name="description" content="Nette Framework web application skeleton">
	<meta name="robots" content="{$robots}" n:ifset="$robots">

        <title>{block title|striptags|upper}{/block}</title>

	<link rel="stylesheet" href="{$basePath}/public/admin/css/bootstrap.css" type="text/css">
	<link rel="stylesheet" href="{$basePath}/public/admin/css/main.css" type="text/css">
	<link rel="shortcut icon" href="{$basePath}/favicon.ico" type="image/x-icon">

	{block head}{/block}
</head>

<body n:class="$presenter->isLinkCurrent('Login:default') ? loginPage">
{if $user->isLoggedIn()}    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{link ControlPanel:default}">
                    STELLA CMS
                </a>

                <div class="nav">
                    <ul class="nav nav-pills">
                        <li class="divider-vertical"></li>
                        <li class="dropdown" id="menu-posts">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu-posts">Příspěvky  <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link Post:default}">Přehled přispěvků</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link Post:addArticle}" tabindex="-1">Vytvořit přispěvek</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link Category:default}">Kategorie</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link Category:addCategory}" tabindex="-1">Přidat kategorii</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link Tag:default}">Štítky</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link Tag:addTag}" tabindex="-1">Vytvořit nový štítek</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown" id="menu-images">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu-images">Média <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a tabindex="-1" href="{link Image:default}">Knihovna médií</a>
                                </li>
                                <li>
                                    <a tabindex="-1" href="{link Image:newImage}">Nahrát soubor</a>
                                </li>
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link ImageCategory:default}">Kategorie medií</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link ImageCategory:addImageCategory}" tabindex="-1">Přidat kategorii medií</a>
                                        </li>
                                    </ul>
                                </li>                                
                            </ul>
                        </li>                        
                        <li class="dropdown" id="menu-href">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu-href">Menus <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link Menu:default}">Menu Manager</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link Menu:addMenu}" tabindex="-1">Add menu</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown" id="menu-links">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu-links">Odkazy <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="{link Link:default}">Přehled odkazů</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{link Link:addLink}" tabindex="-1">Vytvořit nový odkaz</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown" id="menu-links">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu-options">Nastavení <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a tabindex="-1" href="{link Options:default#faceBook}">Facebook nastavení</a>
                                </li>
                            </ul>
                        </li>
                        <li class="divider-vertical"></li>
                    </ul>
                </div><!-- container class ending -->

                <div class="btn-group pull-right">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#menu4">
                    <i class="icon-user"></i> {$user->getIdentity()->username}
                    <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href=""><i class="icon-edit"></i> Upravit profil</a></li>
                        <li><a n:href="Logout!"><i class="icon-off"></i>  Log Out</a></li>
                    </ul>
                </div>
            </div><!-- container ending -->
        </div><!-- end navbar-inner ending -->
    </div>

{/if}  
<div class="layout">
    {if $user->isLoggedIn()} 
    <div style="padding-top: 50px;">
        {control breadCrumbs}
    </div>      
   
    {snippet flashMessages}
        <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">
            <button class="close" data-dismiss="alert" type="button">×</button>
            {$flash->message}
        </div>
    {/snippet}
    {/if}{* block section for logged in users *}
    <div class="container">
    <!-- content block! -->
        {include #content}
    <!-- content block ending! -->
    </div>
    <div class="push"></div>  
</div><!-- layout div end -->  
    
<footer class="footer-wrapper">
    <div class="container">
        {block footer}
        <div class="row">
            <div class="span3 pull-right">
                <p class="footer-logo">&COPY; StellaCMS 2013</p>
            </div>
        </div>
        {/block}
    </div>
</footer><!-- footer end --->      

<!-- JScript block
============================================== -->  
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript">window.jQuery || document.write('<script src="{$basePath}/public/admin/js/jquery-1.9.1.min.js"><\/script>')</script>
<script type="text/javascript" src="{$basePath}/public/admin/js/bootstrap.min.js"></script>
<script type="text/javascript" src="{$basePath}/public/admin/js/page.js"></script>
{block jscript}
{/block}
<!-- End Document
================================================== -->    
</body>
</html>
